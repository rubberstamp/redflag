<div class="container mx-auto px-4 py-8 max-w-4xl">
  <h1 class="text-3xl font-bold mb-6">QuickBooks Profile</h1>
  
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4"><%= @profile.company_name || "Test User" %></h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <p class="text-gray-600 mb-1">Connection Status:</p>
        <p class="font-medium">
          <% if @profile.active? %>
            <span class="text-green-600">Connected</span>
          <% else %>
            <span class="text-red-600">Disconnected</span>
          <% end %>
        </p>
      </div>
      
      <div>
        <p class="text-gray-600 mb-1">Connected Since:</p>
        <p class="font-medium"><%= @profile.connected_at&.strftime("%B %d, %Y") || "Unknown" %></p>
      </div>
      
      <div>
        <p class="text-gray-600 mb-1">Email:</p>
        <p class="font-medium"><%= @profile.email || "Not available" %></p>
      </div>
      
      <div>
        <p class="text-gray-600 mb-1">Legal Name:</p>
        <p class="font-medium"><%= @profile.legal_name || "Not available" %></p>
      </div>
    </div>
  </div>
  
  <div class="flex space-x-4">
    <%= link_to "Start Analysis", quickbooks_start_analysis_path, class: "bg-red-900 text-white px-4 py-2 rounded hover:bg-red-800" %>
    <%= link_to "Disconnect", quickbooks_disconnect_path, class: "bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300", 
                data: { turbo_confirm: "Are you sure you want to disconnect your QuickBooks account?" } %>
  </div>
</div>